@model SampleDotNetApp.Models.MessageModel
@{
    ViewBag.Title = "Home Page";
}

<h2>Welcome to Sample .NET MVC Application</h2>
<p>This is a simple ASP.NET MVC application built with the .NET Framework 4.8 using Razor Views.</p>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Message)
        @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Message)
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn" />
        @using (Html.BeginForm("Clear", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Clear" class="btn btn-secondary" />
        }
    </div>
}

@if (Model.ShowResult)
{
    <div class="result @(Model.IsSuccess ? "success" : "error")">
        @Model.Result
    </div>
}
